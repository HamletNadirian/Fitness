<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:padding="12dp"
    android:gravity="center_vertical"
    android:background="?android:attr/selectableItemBackground">

    <ImageView
        android:id="@+id/ivExerciseImage"
        android:layout_width="98dp"
        android:layout_height="86dp"
        android:scaleType="centerCrop"
        android:background="@drawable/rounded_corner_background"
        android:src="@drawable/squat_animation" />

    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical"
        android:layout_marginStart="12dp">

        <TextView
            android:id="@+id/tvExerciseName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Бег, колени вверх"
            android:textSize="16sp"
            android:textColor="@color/black"
            android:textStyle="normal" />

        <TextView
            android:id="@+id/tvExerciseDuration"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="00:20"
            android:textSize="14sp"
            android:textColor="@color/gray"
            android:layout_marginTop="2dp" />

    </LinearLayout>

    <!-- Exercise number or check icon -->
    <FrameLayout
        android:layout_width="32dp"
        android:layout_height="32dp">

        <TextView
            android:id="@+id/tvExerciseNumber"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:text="1"
            android:textSize="12sp"
            android:textColor="@color/white"
            android:background="@drawable/circle_background_gray"
            android:gravity="center"
            android:visibility="visible" />

        <ImageView
            android:id="@+id/ivCheckIcon"
            android:layout_width="24dp"
            android:layout_height="24dp"
            android:layout_gravity="center"
            android:src="@drawable/ic_check"
            android:background="@drawable/circle_background_green"
            android:padding="4dp"
            android:visibility="gone"
            app:tint="@color/white" />

    </FrameLayout>

</LinearLayout>